<config>
    <modules>
        <OP_Openpayfami>
            <version>1.0.0</version>
        </OP_Openpayfami>
    </modules>
    <global>
        <models>
            <openpayfami>
                <class>OP_Openpayfami_Model</class>
            </openpayfami>
        </models>
        <helpers>
	      <openpayfami>
            <class>OP_Openpayfami_Helper</class>
		  </openpayfami>
	    </helpers>
        <resources>
            <openpayfami_setup>
                <setup>
                    <module>OP_Openpayfami</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </openpayfami_setup>
            <openpayfami_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </openpayfami_write>
            <openpayfami_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </openpayfami_read>
        </resources>
        <blocks>
            <openpayfami><class>OP_Openpayfami_Block</class></openpayfami>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <openpayfami_processing>/openpayfami/processing</openpayfami_processing>
        </secure_url>
        <routers>
            <openpayfami>
                <use>standard</use>
                <args>
                    <module>OP_Openpayfami</module>
                    <frontName>openpayfami</frontName>
                </args>
            </openpayfami>
        </routers>
        <layout>
            <updates>
                <openpayfami>
                    <file>openpayfami.xml</file>
                </openpayfami>
            </updates>
        </layout>
    </frontend>
	<default>
        <payment>        
            <openpayfami_main>
                <active>0</active>
                <model>openpayfami/main</model>
                <order_status>1</order_status>
                <title>台灣里 全家 Fami繳款</title>
                <allowspecific>0</allowspecific>
            </openpayfami_main>
        </payment>
    </default> 
</config>
